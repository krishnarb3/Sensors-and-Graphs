<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dev.noob.pro.rb.spidertask4" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Accelerometer"
            android:label="@string/title_activity_accelerometer"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dev.noob.pro.rb.spidertask4.MainActivity" />
        </activity>
        <activity
            android:name=".gyrosensor"
            android:label="@string/title_activity_gyrosensor"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dev.noob.pro.rb.spidertask4.MainActivity" />
        </activity>
        <activity
            android:name=".animatedball"
            android:label="@string/title_activity_animatedball"
            android:parentActivityName=".Accelerometer" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dev.noob.pro.rb.spidertask4.Accelerometer" />
        </activity>
        <activity
            android:name=".proximity"
            android:label="@string/title_activity_proximity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dev.noob.pro.rb.spidertask4.MainActivity" />
        </activity>
    </application>

</manifest>
